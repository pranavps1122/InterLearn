{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false,

    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/core/*": ["core/*"],
      "@/modules/*": ["modules/*"]
    }
  },
  "include": ["src"]
}
